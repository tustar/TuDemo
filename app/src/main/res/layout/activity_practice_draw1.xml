            android:background="#ccc"
            android:layout_height="200dp" />

        <com.tustar.demo.ui.hencoder.ch1.DrawRoundRectView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <com.tustar.demo.ui.hencoder.ch1.DrawArcView
            android:layout_width="match_parent"
            android:background="#ccc"
            android:layout_height="200dp" />

        <com.tustar.demo.ui.hencoder.ch1.HistogramView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <com.tustar.demo.ui.hencoder.ch1.PieChartView
            android:layout_width="match_parent"
            android:background="#ccc"
