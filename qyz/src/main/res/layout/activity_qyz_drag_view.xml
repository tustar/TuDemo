    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_light"
        android:onClick="dragviewgroup"
        android:text="drag viewgroup" />

</LinearLayout>