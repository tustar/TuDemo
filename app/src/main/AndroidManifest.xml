<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tustar.demo"
    android:versionCode="0006"
    android:versionName="1.0.0006">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- RecyclerView -->
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <!-- Rotation -->
        <activity
            android:name=".rotation.RotationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="user"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <!-- FloatControllerActivity -->
        <activity android:name=".floatwindow.FloatWindowActivity" />

        <service android:name=".service.PhoneStateService" />

        <activity android:name=".SurfaceViewActivity" />
        <activity android:name=".DragSortListViewActivity"></activity>
    </application>

</manifest>
