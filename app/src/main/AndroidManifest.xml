<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tustar.demo"
    android:versionCode="0006"
    android:versionName="1.0.0006">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!--  -->
    <uses-permission android:name="com.tustar.PROVIDER" />
    <uses-permission android:name="com.tustar.permission.ACCESS_BOOK_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".TuApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- 主页 -->
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:configChanges="orientation|keyboardHidden|screenSize|uiMode"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

         <!-- 文件管理器 -->
        <activity android:name=".ui.fm.FmMainActivity" />
        <activity
            android:name=".ui.fm.FmGifPlayerActivity"
            android:hardwareAccelerated="false" />
        <activity android:name=".ui.fm.FmGifDrawableActivity" />
        <activity android:name=".ui.fm.FmRenameActivity" />
        <activity android:name=".ui.fm.FmJavaRenameActivity" />
        <activity android:name=".ui.fm.FmArcActivity" />

        <service android:name=".ui.fm.service.FileMonitorService" />
        <service
            android:name=".ui.fm.service.FileScannerService"
            android:process=".fm" />

        <activity android:name=".ui.fm.FmSpShareActivity" />
        <activity android:name=".ui.fm.FmOpenActivity" />
        <activity android:name=".ui.fm.FmSectionListViewActivity" />
        <activity android:name=".ui.fm.FmSectionGridViewActivity" />
        <activity android:name=".ui.fm.FmLongPhotoActivity" /> <!-- 时钟实例 -->
        <activity android:name=".ui.deskclock.DeskClockActivity" />

        <provider
            android:name=".ui.deskclock.provider.HistoryProvider"
            android:authorities="com.tustar.demo"
            android:exported="false" /> <!-- 计算器 -->
        <activity android:name=".ui.calculator.HistoryActivity" /> <!-- 信号监听 -->
        <activity android:name=".ui.signal.SignalActivity" />

        <service android:name=".ui.signal.PhoneStateService" /> <!-- 账号管理 -->
        <activity android:name=".ui.account.AccountActivity" /> <!-- Service实例 -->
        <activity android:name=".ui.service.ServiceActivity" />

        <service
            android:name=".ui.service.DemoService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.tustar.demo.AIDL" />
            </intent-filter>
        </service>
        <service
            android:name=".ui.service.DemoIntentService"
            android:exported="false" /> <!-- Provider实例　 -->
        <activity android:name=".ui.provider.ProviderActivity" /> <!-- RecyclerView实例 -->
        <activity android:name=".ui.recycler.RecyclerViewActivity" /> <!-- 可拖动ListView实例 -->
        <activity android:name=".ui.dragsortlistview.DragSortListViewActivity" /> <!-- 动画模块 -->
        <activity android:name=".ui.anim.viewanim.ViewAnimActivity" />
        <activity android:name=".ui.anim.viewanim.HideActionBarActivity" /> <!-- Scroller实例 -->
        <activity android:name=".ui.scroller.ScrollerActivity" />
        <activity android:name=".ui.scroller.OnePointerDrawViewActivity" />
        <activity android:name=".ui.scroller.TwoPointerDrawViewActivity" />
        <activity android:name=".ui.scroller.HOverScrollViewActivity" />
        <activity android:name=".ui.scroller.HScrollViewActivity" />
        <activity android:name=".ui.scroller.other.OtherOnePointerDrawViewActivity" />
        <activity android:name=".ui.scroller.other.OtherTwoPointerDrawViewActivity" />
        <activity android:name=".ui.scroller.other.OtherHScrollViewActivity" />
        <activity android:name=".ui.scroller.other.OtherHOverScrollViewActivity" /> <!-- JetPack -->
        <activity android:name=".ui.jet.pagingroom.BookActivity" /> <!-- Loader实例 -->
        <activity android:name=".ui.loader.LoaderActivity" />
    </application>

</manifest>