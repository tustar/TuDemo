<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hide_listview_color"
    tools:context="com.tustar.demo.activity.anim.viewanim.HideActionBarActivity">

    <RelativeLayout
        android:id="@+id/hide_action_bar"
        android:layout_width="match_parent"
        android:background="@android:color/holo_red_dark"
        android:layout_height="46dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/hide_action_bar"
        android:id="@+id/hide_search_layout"
        android:layout_width="match_parent"
        android:background="@android:color/holo_orange_light"
        android:layout_height="40dp">
    </RelativeLayout>

    <ListView
        android:id="@+id/hide_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hide_search_layout"/>

</RelativeLayout>
