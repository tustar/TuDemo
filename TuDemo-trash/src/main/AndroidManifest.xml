<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tustar.demo"
    android:versionCode="0006"
    android:versionName="1.0.0006">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!--  -->
    <uses-permission android:name="com.tustar.PROVIDER" />
    <uses-permission android:name="com.tustar.permission.ACCESS_BOOK_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".TuApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- 主页 -->
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|uiMode"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--四大组件-->
        <activity android:name=".ui.component.HistoryProviderActivity" />
        <provider
            android:name=".ui.component.HistoryProvider"
            android:authorities="com.tustar.demo"
            android:exported="false" />
        <activity android:name=".ui.component.DemoServiceActivity" />

        <service
            android:name=".ui.component.DemoService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.tustar.demo.AIDL" />
            </intent-filter>
        </service>
        <service
            android:name=".ui.component.DemoIntentService"
            android:exported="false" />
        <!--动画-->
        <activity android:name=".ui.anim.ViewAnimActivity" />
        <activity android:name=".ui.anim.HideActionBarActivity" />
        <!--自定义View-->
        <activity android:name=".ui.custom.ScrollerActivity" />
        <activity android:name=".ui.custom.OnePointerDrawViewActivity" />
        <activity android:name=".ui.custom.TwoPointerDrawViewActivity" />
        <activity android:name=".ui.custom.HOverScrollViewActivity" />
        <activity android:name=".ui.custom.HScrollViewActivity" />
        <activity android:name=".ui.custom.other.OtherOnePointerDrawViewActivity" />
        <activity android:name=".ui.custom.other.OtherTwoPointerDrawViewActivity" />
        <activity android:name=".ui.custom.other.OtherHScrollViewActivity" />
        <activity android:name=".ui.custom.other.OtherHOverScrollViewActivity" />
    </application>

</manifest>